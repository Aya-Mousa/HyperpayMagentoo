<config>
    <modules>
        <Hyperpay>
            <version>1.1.2</version>
        </Hyperpay>
    </modules>

    <global>
        <helpers>
            <hyperpay>
                <class>Hyperpay_Helper</class>
            </hyperpay>
        </helpers>
        <models>
            <hyperpay>
                <class>Hyperpay_Model</class>
            </hyperpay>
        </models>
        <resources>
            <hyperpay_setup>
                <setup>
                    <module>Hyperpay</module>
					<class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </hyperpay_setup>
        </resources>		
        <blocks>
            <hyperpay>
                <class>Hyperpay_Block</class>
            </hyperpay>
        </blocks>
        <sales>
            <order>
                <statuses>
                    <payment_accepted translate="label">
                        <label>Payment Accepted</label>
                    </payment_accepted>
                    <payment_remotely translate="label">
                        <label>Payment Remotely Accepted</label>
                    </payment_remotely>					
                </statuses>
				<states>
					<pending_payment>
						<statuses>
							<payment_remotely/>
						</statuses>
					</pending_payment>
					<processing>
						<statuses>
							<payment_accepted/>
						</statuses>
					</processing>					
				</states>
            </order>
        </sales>		
    </global>

    <frontend>
        <translate>
            <modules>
                <Hyperpay>
                    <files>
                        <default>Hyperpay.csv</default>
                    </files>
                </Hyperpay>
            </modules>
        </translate>
        <routers>
            <Hyperpay>
                <use>standard</use>
                <args>
                    <module>Hyperpay</module>
                    <frontName>hyperpay</frontName>
                </args>
            </Hyperpay>
        </routers>
        <layout>
            <updates>
                <hyperpay>
                    <file>hyperpay.xml</file>
                </hyperpay>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Hyperpay>
                    <files>
                        <default>Hyperpay.csv</default>
                    </files>
                </Hyperpay>
            </modules>
        </translate>
    </adminhtml>

    <admin>
        <routers>
		<adminhtml>
    			<args>
        			<modules>
            				<hyperpay before="Mage_Adminhtml">Hyperpay_Adminhtml</hyperpay>
        			</modules>
    			</args>
		</adminhtml>
        </routers>
    </admin>

    <frontend>
        <routers>
            <hyperpay>
                <use>standard</use>
                <args>
                    <module>Hyperpay</module>
                    <frontName>hyperpay</frontName>
                </args>
            </hyperpay>
        </routers>
    </frontend>

    <default>
        <payment>
            <hyperpay_creditcard>
                <active>1</active>
                <model>hyperpay/method_creditcard</model>
                <order_status>pending_payment</order_status>
				<payment_action>authorize</payment_action>				
                <title>Cards</title>
                <server_mode>TEST</server_mode>
                <transaction_mode>DB</transaction_mode>
				<channel_id></channel_id>
				<sender></sender>
				<login></login>
				<password></password>				
            </hyperpay_creditcard>

            <hyperpay_directdebit>
                <active>1</active>
                <model>hyperpay/method_directdebit</model>
                <order_status>pending_payment</order_status>
                <payment_action>authorize</payment_action>				
                <title>Direct Debit</title>
                <server_mode>TEST</server_mode>
				<channel_id></channel_id>
				<sender></sender>
				<login></login>
				<password></password>				
            </hyperpay_directdebit>
            
            <hyperpay_eps>
                <active>1</active>
                <model>hyperpay/method_eps</model>
                <order_status>pending_payment</order_status>
                <payment_action>authorize</payment_action>
                <title>eps</title>
                <server_mode>TEST</server_mode>
				<channel_id></channel_id>
				<sender></sender>
				<login></login>
				<password></password>				
            </hyperpay_eps>
			
            <hyperpay_giropay>
                <active>1</active>
                <model>hyperpay/method_giropay</model>
                <order_status>pending_payment</order_status>
                <payment_action>authorize</payment_action>
                <title>giropay</title>
                <server_mode>TEST</server_mode>
				<channel_id></channel_id>
